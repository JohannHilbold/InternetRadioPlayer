<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inside border/shadow -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="52dp"
                android:height="52dp"/>

            <gradient
                android:angle="90"
                android:endColor="#94A9B4"
                android:startColor="#012130"/>
        </shape>
    </item>

    <!-- Main button -->
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#fafafa"/>
        </shape>
    </item>

</layer-list>